    <pre>
    <?php
    for ($i=1; $i <100 ; $i++) { 
        if ($i%3==0 || $i%5==0){
            if ($i%3==0){
                echo "FIZZ"." ";
            }
            if ($i%5==0) {
                echo "BUZZ"." ";
            }
        }
        else{
            echo $i." ";
        }
    }
    ?>
    </pre>
